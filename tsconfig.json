{
  "rootDirs": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es6",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typing/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
